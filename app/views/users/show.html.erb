<div class="row">
	<div class="col-md-8 col-md-offset-3">
		<h1>Welcome, <%= current_user.name %></h1>
		<%= link_to "Update profile", edit_user_path, :class => 'btn btn-custom'  %>
		<%= link_to "Delete profile", :user, method: :delete, data: { confirm: "Are you sure you want to delete your profile?" }, :class => 'btn btn-custom'  %>
		</br>
		</br>
	<div class="row">
	<div class="col-md-4">
		<p>Your Recent Posts</p>
		<% if current_user %>
		<% @user.posts.reverse_each do |p| %>
		<%= image_tag p.image.url, :size => "360c360", :crop => :fill %>

        <%= link_to "Delete", post_path(p.id), method: :delete, data: { confirm: "Are you sure you want to delete your post?" }, :class => 'btn btn-custom' %>
        </br>
		</br>

		<% end %>
		<% end %>
	</div>
	</div>
</div>
