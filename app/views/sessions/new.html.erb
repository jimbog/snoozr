
<div class="container">

  <%= form_for :login, :html => {:class => "form-signin"} do |f| %>
    <h2 class="form-signin-heading" "centered">Please sign in</h2>
			<div>
	        <%= f.label :email %>
	        <%= f.text_field :email %>
	    </div>

	    <div>
	        <%= f.label :password %>
	        <%= f.password_field :password %>
	    </div>

    	<%= f.submit "Log in", class: "btn btn-lg btn-custom btn-block" %>

<% end %>

</div> <!-- /container -->
